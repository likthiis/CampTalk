<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AndroidCampTalk">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/B_backToMain"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="返回主页面" />

        <Button
            android:id="@+id/B_friendRequestIn2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@+id/B_backToMain"
            android:layout_centerHorizontal="true"
            android:text="好友连接" />

        <EditText
            android:id="@+id/E_inputUid"
            android:layout_width="180dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/T_showUser"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="83dp"
            android:gravity="center"
            android:text="用户结果"
            android:textSize="18sp" />

        <Button
            android:id="@+id/B_sendSearch"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@+id/B_friendRequestIn2"
            android:layout_centerHorizontal="true"
            android:text="查找用户" />


    </RelativeLayout>



</android.support.constraint.ConstraintLayout>